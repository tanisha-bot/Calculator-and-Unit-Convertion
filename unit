def convert_temperature():
    print("Temperature Converter:")
    print("1. Celsius to Fahrenheit")
    print("2. Fahrenheit to Celsius")
    
    choice = input("Choose the conversion (1/2): ")
    
    if choice == '1':
        celsius = float(input("Enter temperature in Celsius: "))
        fahrenheit = (celsius * 9/5) + 32
        print(f"{celsius}째C = {fahrenheit}째F")
    elif choice == '2':
        fahrenheit = float(input("Enter temperature in Fahrenheit: "))
        celsius = (fahrenheit - 32) * 5/9
        print(f"{fahrenheit}째F = {celsius}째C")
    else:
        print("Invalid choice")

def convert_length():
    print("Length Converter:")
    print("1. Meters to Kilometers")
    print("2. Kilometers to Meters")
    
    choice = input("Choose the conversion (1/2): ")
    
    if choice == '1':
        meters = float(input("Enter length in meters: "))
        kilometers = meters / 1000
        print(f"{meters} meters = {kilometers} kilometers")
    elif choice == '2':
        kilometers = float(input("Enter length in kilometers: "))
        meters = kilometers * 1000
        print(f"{kilometers} kilometers = {meters} meters")
    else:
        print("Invalid choice")

def convert_weight():
    print("Weight Converter:")
    print("1. Kilograms to Pounds")
    print("2. Pounds to Kilograms")
    
    choice = input("Choose the conversion (1/2): ")
    
    if choice == '1':
        kilograms = float(input("Enter weight in kilograms: "))
        pounds = kilograms * 2.20462
        print(f"{kilograms} kilograms = {pounds} pounds")
    elif choice == '2':
        pounds = float(input("Enter weight in pounds: "))
        kilograms = pounds / 2.20462
        print(f"{pounds} pounds = {kilograms} kilograms")
    else:
        print("Invalid choice")

# Main function to select which type of conversion
print("Welcome to the Unit Converter!")
print("Choose conversion type:")
print("1. Temperature")
print("2. Length")
print("3. Weight")

choice = input("Enter choice (1/2/3): ")

if choice == '1':
    convert_temperature()
elif choice == '2':
    convert_length()
elif choice == '3':
    convert_weight()
else:
    print("Invalid input") 